    }
    .form {
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        padding: 0px;
        gap: 20px;
        position: absolute;
        width: 557px;
        height: 678.75px;
        left: 589px;
        top: 392px;
    }
    legend {
        width: 513px;
        left: 589px;
        top: 200px;
        position: absolute;
        height: 47px;
        font-family: 'Roboto';
        font-style: normal;
        font-weight: 600;
        font-size: 40px;
        line-height: 47px;
        color: #1A1C20;
    }
     p {
        width: 513px;
        height: 72px;
        left: 589px;
        top: 300px;
        position: absolute;
        font-family: 'Roboto';
        font-style: normal;
        font-weight: 400;
        font-size: 24px;
        line-height: 150%;
        color: #1A1C20;
    }
    .name {
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        padding: 0px;
        gap: 8.92px;
        width: 513px;
        height: 90.92px;
    }

    .email {
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        padding: 0px;
        gap: 8.92px;
        width: 513px;
        height: 89.92px;
    }

    .message {
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        padding: 0px;
        gap: 8.92px;
        width: 513px;
        height: 220.92px;
    }

    .button {
        display: flex;
        flex-direction: row;
        justify-content: center;
        align-items: center;
        padding: 10px;
        gap: 10px;
