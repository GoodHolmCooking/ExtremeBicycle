    <legend>How can we help you?</legend>
    <p>Need some assistance? Send us a message 
        <br /> and we will get back to you soon!</p>


<section class="form">
    <div>

        <label>
            Name

            <input class="name" type="text" name="Name" required placeholder="enter your name" autocomplete="off" autofocus />

        </label>

    </div>

    <div>

        <label>
            Email

            <input class="email" type="text" name="Email" required placeholder="enter your email" autocomplete="off" autofocus />

        </label>

    </div>

    <div>

        <label for="YourMessage">Your message</label>

        <input class="message" id="YourMessage" type="text" name="YourMessage" required>

    </div>

    <button class="button">Send</button>
</section>